<h1>Listing integrations</h1>

<table>
  <tr>
    <th>Harvest project</th>
    <th>Pivotal project</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @integrations.each do |integration| %>
  <tr>
    <td><%= integration.harvest_project_id %> - <%= integration.harvest_project_name %></td>
    <td><%= integration.pivotal_project_id %> - <%= integration.pivotal_project_name %></td>
    <td><%= integration.user %></td>
    <td><%= link_to 'Show', user_integration_path(@user.id, integration.id) %></td>
    <td><%= link_to 'Edit', edit_user_integration_path(@user.id, integration.id) %></td>
    <td><%= link_to 'Destroy', user_integration_path(@user.id, integration.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

