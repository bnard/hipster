  <% if notice %>
  <div class="alert alert-success">
    <%= notice %>
    <a class="close" data-dismiss="alert" href="#">&times;</a>
  </div>
  <% end %>
  <hr>
<%= simple_form_for([@user, @integration]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div valign="center">
      <input type="radio" checked name="integration[selection]" id="integration_selection" value="auto"> Automated Mapping</div>
      <br>
      <%= f.input :client_id, as: :select, collection: @harvest_clients %>
      <%= f.input :project_name %>
      <%= f.input :harvest_project_code, :label => 'Project Code' %>
      <%= f.input :harvest_billable, as: :select, :label => 'Billable' %>
      <%= f.input :harvest_budget, as: :select, collection: [['Total project hours', 'project'], ['Total project fees', 'project_cost'], ['Hours per task', 'task'], ['Hours per person', 'person']], :label => 'Budget' %>
      <%= f.input :pivotal_start_iteration, as: :select, :label => 'Start Iteration', collection: [['Sunday','0'],['Monday','1'],['Tuesday','2'],['Wednesday','3'],['Thursday','4'],['Friday','5'],['Saturday','6']] %>

    <br> <b>Team Member</b>
     <% if @people_list.empty? %>
<br>No user found
  <% else %>
<% @people_list.each do |pm| %>
  <div><input type="checkbox" name="integration[person_ids][]" id="integration_person_ids" value="<%=pm.id%>" /> <%=pm.harvest_name%></div>
<% end %>
<% end %>
<hr>
    <input type="radio" name="integration[selection]" id="integration_selection" value="manual"/> Manual Mapping<br/>
    <%= f.input :harvest_project_id, as: :select, collection: @harvest_projects %>
    <%= f.input :pivotal_project_id, as: :select, collection: @pivotal_projects %>
   
    <%= f.association :user, as: :hidden %>
  </div>
  <div class="form-submit">
    <%= f.button :submit, :value => 'Create Project' %>

    <% if @integration.id %>
      <%= link_to 'Cancel', detail_user_integration_path(@user.id, @integration.id), class: 'btn' %>
    <% else %>
      <%= link_to 'Cancel', user_integrations_path(@user), class: 'btn' %>
    <% end %>
  </div>
<% end %>
