<div class="row-fluid">
  <h2>Project</h2>
  <% if notice %>
  <div class="alert alert-success">
    <%= notice %>
    <a class="close" data-dismiss="alert" href="#">&times;</a>
  </div>
  <% end %>

  <div class="detail">
    <p>
      <b>Harvest project</b>
      : <%= @integration.harvest_project_id %> - <%= @integration.harvest_project_name %>
    </p>

    <p>
      <b>Pivotal project</b>
      : <%= @integration.pivotal_project_id %> - <%= @integration.pivotal_project_name %>
    </p>

    <p>
      <b>Project Manager</b>
      : <%= @integration.user %>
    </p>

    <p>
      <b>Callback</b>
      : <%= callback_integration_url(@integration) %>
    </p>
  </div>

<div class="row-fluid">
  <h2>Person mappings</h2>

<% if @person_mappings.empty? %>
  No Person Mapping found.
<% else %>
<table class="table">
    <thead>
      <tr>
        <th>Harvest</th>
        <th>Pivotal</th>
        <!--th>Integration</th-->
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

  <% @person_mappings.each do |mapping| %>
    <tbody>
      <tr>
        <td><%= mapping.person.harvest_info %></td>
        <td><%= mapping.person.pivotal_info %></td>
        
        <td><%= link_to 'Show', mapping %></td>
        <!--td><%= link_to 'Edit', edit_person_mapping_path(mapping) %></td-->
        <td><%= link_to 'Destroy', mapping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tbody>
  <% end %>
  </table>
  <% end %>
</div>
  <div class="form-submit">
    <!--%= link_to 'Manage Person Mapping', integration_person_mappings_path(@integration), class: 'btn' %-->
    <%= link_to 'Edit Project', edit_user_integration_path(@user, @integration), class: 'btn' %>
    <%= link_to 'New Person mapping', new_integration_person_mapping_path(@integration), class: 'btn' %>
    <%= link_to 'Populate Person mapping', populate_integration_person_mapping_path(@integration), class: 'btn' %>
    <%= link_to 'Back', user_integrations_path(@user), class: 'btn' %>
  </div>

</div>
