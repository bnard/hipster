<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :pivotal_id %>
    <%= f.input :pivotal_username %>
    <%= f.input :pivotal_password %>
    <%= f.input :harvest_subdomain %>
    <%= f.input :harvest_id %>
    <%= f.input :harvest_username %>
    <%= f.input :harvest_password %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
