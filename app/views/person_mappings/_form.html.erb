<%= simple_form_for([@integration, @person_mapping]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :harvest_id %>
    <%= f.input :email %>
    <%= f.input :pivotal_name %>
    <%= f.association :integration, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
