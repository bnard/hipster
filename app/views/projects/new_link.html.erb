<div class="row-fluid">
  <h2>Integrate Existing Project</h2>
  <% if notice %>
  <div class="alert alert-success">
    <%= notice %>
    <a class="close" data-dismiss="alert" href="#">&times;</a>
  </div>
<% end %>
<hr>
<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :harvest_project_id, as: :select, collection: @harvest_projects %>
    <%= f.input :pivotal_project_id, as: :select, collection: @pivotal_projects %>
   
    <%= f.association :user, as: :hidden %>
  </div>
  <div class="form-submit">
    <%= f.button :submit, :value => 'Link Project' %>

    <% if @project.id %>
      <%= link_to 'Cancel', detail_project_path(@project.id), class: 'btn' %>
    <% else %>
      <%= link_to 'Cancel', projects_path, class: 'btn' %>
    <% end %>
  </div>
<% end %>
</div>
