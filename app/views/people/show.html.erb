<div class="row-fluid">
  <h2>People</h2>
  <% if notice %>
  <div class="alert alert-success">
    <%= notice %>
    <a class="close" data-dismiss="alert" href="#">&times;</a>
  </div>
  <% end %>
  <div class='detail'>
    <p>
      <b>Harvest ID</b>
      : <%= @person.harvest_id %>
    </p>

    <p>
      <b>Harvest Email</b>
      : <%= @person.harvest_email %>
    </p>

    <p>
      <b>Harvest Name</b>
      : <%= @person.harvest_name %>
    </p>


    <p>
      <b>Pivotal Email</b>
      : <%= @person.pivotal_email %>
    </p>

    <p>
      <b>Pivotal Name</b>
      : <%= @person.pivotal_name %>
    </p>
</div>
  <div class='form-submit'>
    <%= link_to 'Edit', edit_person_path(@person), class: 'btn' %> 
    <%= link_to 'Back', people_path, class: 'btn' %>
  </div>
</div>